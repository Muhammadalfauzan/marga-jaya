<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:padding="16dp">

    <!-- Tombol Close -->
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/round_close_24"
        android:layout_gravity="end|top"
        android:contentDescription="Tutup"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Konten Utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:clipToPadding="true">

        <ImageView
            android:id="@+id/ivSucces"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/appmarga"
            android:contentDescription="Succes booking" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berhasil booking lapangan"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnLihatBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat booking"
                android:backgroundTint="@color/primary" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>

