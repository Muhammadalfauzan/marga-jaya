<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Menggunakan selected_item_background saat item dipilih -->
    <item android:drawable="@drawable/selected_item_bg" android:state_checked="true" />

    <!-- Latar belakang transparan saat item tidak dipilih -->
    <item android:drawable="@android:color/transparent" android:state_checked="false" />
</selector>
