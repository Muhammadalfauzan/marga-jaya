<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.buktibooking.BuktiFragment">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAMA"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/namaPengguna"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NAMA"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />
        <!-- Judul -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUKTI SEWA"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <!-- Label Jenis Lapangan -->
        <TextView
            android:id="@+id/tv_label_jenis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="JENIS LAPANGAN"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <!-- Value Jenis Lapangan -->
        <TextView
            android:id="@+id/tv_jenis_lapangan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lapangan 1"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/tv_label_jenis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_label_jenis" />

        <!-- Label Jam atau Sesi -->
        <TextView
            android:id="@+id/tv_label_sesi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="JAM ATAU SESI"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_jenis_lapangan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_jam_sesi" />

        <!-- Value Jam atau Sesi -->
        <TextView
            android:id="@+id/tv_jam_sesi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jam_marga"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/tv_label_sesi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_label_sesi" />

        <!-- Label Hari, Tanggal -->
        <TextView
            android:id="@+id/tv_label_hari"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="HARI, TANGGAL"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_jam_sesi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_hari_tanggal" />

        <!-- Value Hari, Tanggal -->
        <TextView
            android:id="@+id/tv_hari_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat 03 Dec 2023"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/tv_label_hari"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_label_hari" />

        <!-- Label Harga Lapangan -->
        <TextView
            android:id="@+id/tv_label_harga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="HARGA LAPANGAN"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_hari_tanggal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_harga_lapangan" />

        <!-- Value Harga Lapangan -->
        <TextView
            android:id="@+id/tv_harga_lapangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.40.000/sesi"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/tv_label_harga"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_label_harga" />

        <!-- Label Hari Pesan -->
        <TextView
            android:id="@+id/tv_label_pesan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="HARI PESAN"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_harga_lapangan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_hari_pesan" />

        <!-- Value Hari Pesan -->
        <TextView
            android:id="@+id/tv_hari_pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03 Dec 2024,13:40"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/tv_label_pesan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_label_pesan" />

        <!-- Catatan -->
        <TextView
            android:id="@+id/tv_note1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nb"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_hari_pesan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_note2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nb2"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_note1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Bagikan"
            app:strokeWidth="1dp"
            app:cornerRadius="10dp"
            android:textAlignment="gravity"
            app:strokeColor="@color/primary"
            android:backgroundTint="@android:color/transparent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@+id/tv_note2"
            tools:layout_editor_absoluteX="16dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/materialButton"
            app:layout_constraintTop_toBottomOf="@+id/materialButton" />
</androidx.constraintlayout.widget.ConstraintLayout>
